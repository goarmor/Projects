<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/photo_photo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/photo_title"
        android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_photo_title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/photo_subtitle"
            android:textSize="16sp"
            android:id="@+id/textView2" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/photo_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:srcCompat="@drawable/no_image" />

    <ProgressBar
        android:id="@+id/photo_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:visibility="invisible"

        android:layout_marginStart="72dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/photo_image" />

    </RelativeLayout>

</android.support.v7.widget.CardView>